<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_customerName"
        style="@style/CustomerRowTvStyle"
        android:layout_marginTop="5dp"
        android:text="Manohar Kurapati"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_customerMobile"
        style="@style/CustomerRowTvStyle"
        android:text="0751625543"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tv_customerAddress"
        style="@style/CustomerRowTvStyle"
        android:text="42 Broadhust place"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/tv_customerCity"
        style="@style/CustomerRowTvStyle"
        android:text="London"
        android:textSize="12sp" />
    <View
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>